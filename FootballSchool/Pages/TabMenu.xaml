<UserControl x:Class="FootballSchool.TabMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="900">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="Tab">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Команды / Игроки" Source="/Pages/TeamsPlayers.xaml"/>
                <mui:Link DisplayName="Турнирная таблица" Source="/Pages/TableStats.xaml" />
                <mui:Link DisplayName="Матчи" Source="/Pages/GamesVM.xaml"/>
                <mui:Link DisplayName="Судьи" Source="/Pages/Referies.xaml"/>
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
